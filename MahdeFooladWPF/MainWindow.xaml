<Window x:Class="MahdeFooladWPF.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MahdeFooladWPF"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        
        Title="MainWindow" Height="250" Width="600">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush
                    StartPoint="0.5,0" EndPoint="0.5,1"
                     Opacity="0.9">
                <GradientStop Color="#0A5A5C" Offset="0.6" />
                <GradientStop Color="#109193" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Button Background="Transparent"
                    BorderBrush="Transparent" HorizontalAlignment="Left" Margin="5">
                <Button.Content>
                    <materialDesign:PackIcon Kind="Close" Foreground="#BA544F" FontWeight="Bold"/>
                </Button.Content>
            </Button>

            <TextBlock Text="کاربر امیر حسین مرادی" Grid.Column="1" 
                       HorizontalAlignment="Right"
                       Margin="10"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FlowDirection="RightToLeft"
                       />
        </Grid>


        <Grid Grid.Row="1">
            <Border
                CornerRadius="10"
                Background="#DAD2D8"
                Margin="10">
                <StackPanel
>
                    <TextBlock Text="تست این نرم افزار نمایش" Padding="10"
                           FontWeight="SemiBold"
                           Foreground="black"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"/>

                    <Separator/>
                    <TextBlock 
                    TextWrapping="Wrap"
                    Padding="10"
                    FlowDirection="RightToLeft"
                    Text="this operation should have the number for the this prepus of our posigion for the doing stuf or create new brand car for the tesla"/>



                    <Border
                        Background="DarkOrange"
                        BorderBrush="AliceBlue"
                        BorderThickness="3"
                        CornerRadius="15"
                        HorizontalAlignment="Left">
                        <StackPanel
                            Orientation="Horizontal"
                            Width="45"
                            x:Name="Stpanel">
                            <Button
                                Width="45"
                                HorizontalAlignment="Left"
                                Background="Transparent"
                                Name="ToggleBtn"
                                Click="ToggleBtn_Click"
                                BorderBrush="Transparent">
                                <Button.Content>
                                    <materialDesign:PackIcon Kind="ArrowRight" Name="toggleBtnContent" />
                                </Button.Content>
                            </Button>
                            <Button Margin="5"/>
                            <Button Margin="5"/>
                            <Button Margin="5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
