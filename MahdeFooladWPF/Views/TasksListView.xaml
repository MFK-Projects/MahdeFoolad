<Window x:Class="MahdeFooladWPF.Views.TasksListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MahdeFooladWPF.Views"
        xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="TasksListView" Height="500" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>

        <WrapPanel>
            <Button>
                <Button.Template>
                    <ControlTemplate>
                        <Border Margin="5"                               
                                Padding="5"
                                CornerRadius="2"
                                Background="red"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                            <materialdesign:PackIcon Kind="Close"
                                                     VerticalContentAlignment="Center"
                                                     Foreground="white"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">

                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <StackPanel Width="300" Height="auto"
                        FlowDirection="RightToLeft"
                        Orientation="Horizontal">
                <TextBlock Text="لیست وظایف" 
                           Margin="5"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </WrapPanel>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel >
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label >
                        <Label.Template>
                            <ControlTemplate>
                                <Ellipse Width="10" Height="10"
                                     Fill="Red"
                                     Margin="10"
>
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="Gray"                                                       
                                                      ShadowDepth="2" Opacity="0.8"
                                                      Direction="260"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </ControlTemplate>
                        </Label.Template>
                    </Label>
                    <StackPanel>
                        <StackPanel.Background>
                            <LinearGradientBrush >
                                <GradientStop  Color="#FAF3F3" Offset="0"/>
                                <GradientStop  Color="#FAF3F3" Offset="1.1"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <StackPanel.Effect>
                            <DropShadowEffect
                            Color="#524A4E"
                            ShadowDepth="0"
                            Opacity="0.7"
                            BlurRadius="4"
                            Direction="270"/>
                        </StackPanel.Effect>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                       HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        Text="for test purposes and use of reqular experise" 
                        Padding="5"/>

                            <Button Cursor="Hand"
                                    VerticalAlignment="Top">
                                
                                <Button.Template>
                                    <ControlTemplate >
                                        <Border
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Background="Green"
                                            Opacity="1"
                                            Margin="1"
                                            CornerRadius="50">
                                            <materialdesign:PackIcon Kind="Check"
                                                                     Foreground="White"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                        </StackPanel>

                        <TextBlock  Text="1400/12/22"
                                Grid.Row="1"
                                Foreground="Gray"
                                HorizontalAlignment="Right"
                                Padding="5 0 5 0"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <StackPanel>

        </StackPanel>
    </Grid>
</Window>
